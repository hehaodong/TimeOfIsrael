<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_repository"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/ghost_white"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    app:contentPadding="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp">

        <ImageView
            android:id="@+id/iv_user_face"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_margin="5dp"
            android:scaleType="centerCrop"
            tools:src="@mipmap/ic_hugh" />

        <TextView
            android:id="@+id/tv_repo_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_user_face"
            android:maxLines="1"
            android:textColor="@color/primary_text"
            android:textSize="16sp"
            tools:text="angrycode/githubtrendingangrycode/githubtrending" />

        <TextView
            android:id="@+id/tv_repo_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_repo_name"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@+id/iv_user_face"
            android:maxLines="5"
            android:textColor="@color/secondary_text"
            android:textSize="14sp"
            tools:text="githubtrendinggithubtrendinggithubtrendinggithubtrendinggithubtrendinggithubtrending" />

        <TextView
            android:id="@+id/tv_stars_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_repo_desc"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="1dp"
            android:drawableLeft="@drawable/ic_star_black_18dp"
            android:drawablePadding="1dp"
            android:gravity="center"
            android:maxLines="1"
            android:textSize="12sp"
            tools:text="180 stars today" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
